.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户卡片 */
.user-card, .login-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.avatar-wrap {
  margin-right: 24rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.avatar.default {
  opacity: 0.5;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.phone {
  font-size: 26rpx;
  color: #999;
}

.login-hint {
  flex: 1;
}

.login-title {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 16rpx;
}

.login-btn {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 32rpx;
  background-color: #2E7D4A;
  color: #fff;
  border-radius: 32rpx;
  font-size: 28rpx;
}

/* 同步卡片 */
.sync-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: rgba(46, 125, 74, 0.1);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.sync-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #2E7D4A;
  border-radius: 50%;
  margin-right: 20rpx;
  color: #fff;
}

.sync-info {
  flex: 1;
}

.sync-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.sync-time {
  font-size: 24rpx;
  color: #666;
}

.sync-btn {
  font-size: 26rpx;
  color: #2E7D4A;
}

/* 菜单 */
.menu-section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 26rpx;
  color: #2E7D4A;
  font-weight: 600;
  padding: 16rpx 24rpx;
}

.menu-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item .iconfont:first-child {
  font-size: 40rpx;
  color: #666;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-item .icon-right {
  font-size: 28rpx;
  color: #ccc;
}

/* 退出登录 */
.logout-btn {
  margin-top: 40rpx;
  padding: 28rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.logout-btn text {
  color: #ff4444;
  font-size: 30rpx;
}
