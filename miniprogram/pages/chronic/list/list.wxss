.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.condition-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.condition-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  align-items: center;
}

.condition-icon {
  width: 72rpx;
  height: 72rpx;
  background-color: rgba(244, 67, 54, 0.1);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.condition-icon .iconfont {
  font-size: 36rpx;
  color: #F44336;
}

.condition-info {
  flex: 1;
}

.condition-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.diagnosed-date {
  font-size: 24rpx;
  color: #999;
}

.delete-btn {
  padding: 16rpx;
}

.delete-btn .iconfont {
  font-size: 36rpx;
  color: #ccc;
}

.card-body {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.next-checkup {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #FF9800;
}

.card-footer {
  margin-top: 12rpx;
}

.note {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

.fab {
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #F44336;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(244, 67, 54, 0.4);
}

.fab-icon {
  font-size: 48rpx;
  color: #fff;
  font-weight: 300;
}
