<view class="container">
  <view class="header">
    <button bindtap="prevMonth">◀</button>
    <text>{{year}}年{{month}}月</text>
    <button bindtap="nextMonth">▶</button>
  </view>
  <view class="calendar-grid">
    <text wx:for="{{['日','一','二','三','四','五','六']}}" wx:key="*this">{{item}}</text>
  </view>
</view>
