<view class="container">
  <view class="form-section">
    <view class="section-title">基本信息</view>
    <view class="form-card">
      <view class="form-item">
        <text class="label required">医院名称</text>
        <input 
          class="input" 
          placeholder="请输入医院名称" 
          value="{{hospital}}"
          bindinput="onHospitalInput"
        />
      </view>
      
      <view class="form-item">
        <text class="label">科室</text>
        <input 
          class="input" 
          placeholder="请输入科室" 
          value="{{department}}"
          bindinput="onDepartmentInput"
        />
      </view>
      
      <view class="form-item">
        <text class="label">医生</text>
        <input 
          class="input" 
          placeholder="请输入医生姓名" 
          value="{{doctor}}"
          bindinput="onDoctorInput"
        />
      </view>
      
      <view class="form-item">
        <text class="label required">就诊日期</text>
        <picker mode="date" value="{{date}}" bindchange="onDateChange">
          <view class="picker-value">
            {{date || '选择日期'}}
          </view>
        </picker>
      </view>
    </view>
  </view>

  <view class="form-section">
    <view class="section-title">费用</view>
    <view class="form-card">
      <view class="form-item">
        <text class="label">费用（元）</text>
        <input 
          class="input" 
          type="digit"
          placeholder="请输入费用" 
          value="{{cost}}"
          bindinput="onCostInput"
        />
      </view>
    </view>
  </view>

  <view class="form-section">
    <view class="section-title">检查项目</view>
    <view class="form-card">
      <view class="form-item textarea-item">
        <textarea 
          class="textarea" 
          placeholder="请输入检查项目（逗号分隔）"
          value="{{items}}"
          bindinput="onItemsInput"
          maxlength="500"
        />
      </view>
    </view>
  </view>

  <view class="form-section">
    <view class="section-title">备注</view>
    <view class="form-card">
      <view class="form-item textarea-item">
        <textarea 
          class="textarea" 
          placeholder="添加备注信息"
          value="{{note}}"
          bindinput="onNoteInput"
          maxlength="1000"
        />
      </view>
    </view>
  </view>

  <view class="btn-area">
    <button 
      class="save-btn" 
      bindtap="save" 
      disabled="{{saving || !hospital || !date}}"
      loading="{{saving}}"
    >
      保存
    </button>
  </view>
</view>
